<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.NewItem"
             Title="Add new item">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="NewItem_Saved" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="username" Placeholder="Username" />
            <Entry x:Name="first" Placeholder="First Name" />
            <Entry x:Name="last" Placeholder="Last Name" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>