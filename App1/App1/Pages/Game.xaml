<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="App1.MasterDetailPage1Detail"
             Title="Game!">

    <StackLayout Padding="10">
        <!-- <Label Text="This is a detail page. To get the 'triple' line icon on each platform 
      add a icon to each platform and update the 'Master' page with an Icon that references it."/> -->

        <Label Text="Pick a number" 
           VerticalOptions="Center" 
           HorizontalOptions="Center" />

        <Button Text="1" 
           VerticalOptions="CenterAndExpand" 
           HorizontalOptions="Center" 
           Clicked="ButtonClicked"/>

        <Button Text="2" 
           VerticalOptions="CenterAndExpand" 
           HorizontalOptions="Center"
           Clicked="ButtonClicked"/>

        <Button Text="3" 
           VerticalOptions="CenterAndExpand" 
           HorizontalOptions="Center"
           Clicked="ButtonClicked"/>

    </StackLayout>
    
</ContentPage>
